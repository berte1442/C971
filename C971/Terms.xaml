<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="C971.Terms">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Terms"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    FontSize="Medium"
                    Padding="0,20,0,0" />
                <Grid Padding="0,40,0,0">
                    <Button Text="Edit Term"
                        TextColor="White"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        BackgroundColor="Blue"
                        WidthRequest="200"
                        Clicked="EditTerm_Clicked"/>
                    <Button Text="Delete Term"
                        TextColor="White"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        BackgroundColor="Red"
                        WidthRequest="200"
                        Clicked="DeleteTerm_Clicked"
                        Grid.Column="1"/>
                    <Button Text="Add Term"
                        TextColor="White"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        BackgroundColor="Green"
                        WidthRequest="200"
                        Clicked="AddTerm_Clicked"
                        Grid.Column="2"/>
                </Grid>
                <Label Text="Select Term"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    Padding="0,40,0,0"/>
                <StackLayout Padding="20,0,20,0" BackgroundColor="Green"
                             HeightRequest="300">
                    <Picker x:Name="TermPicker" TitleColor="DarkGreen" SelectedIndexChanged="TermPicker_SelectedIndexChanged">
                    </Picker>

                    <ListView x:Name="CourseListView"/>

                </StackLayout>
                <Label Text="Select Course"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    Padding="0,0,0,20"/>
                <Grid>
                    <Button Text="Edit Course"
                            TextColor="White"
                            VerticalOptions="Start"
                            HorizontalOptions="Center"
                            BackgroundColor="Blue"
                            WidthRequest="200"
                            Clicked="EditCourse_Clicked"/>
                    <Button Text="Course Info"
                            TextColor="White"
                            VerticalOptions="Start"
                            HorizontalOptions="Center"
                            BackgroundColor="Green"
                            WidthRequest="200"
                            Clicked="CourseInfo_Clicked"
                            Grid.Column="1"/>
                </Grid>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>