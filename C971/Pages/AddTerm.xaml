<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="C971.AddTerm">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Add Term"
                       FontSize="Large"
                    VerticalOptions="Start"
                    HorizontalOptions="Center"
                    Padding="0,20,0,0" />
                <Label Text="Name New Term"
                       FontSize="Large"
                       HorizontalOptions="Center"
                       Padding="0,20,0,0"/>

                <Entry x:Name="TitleEntry" 
                    VerticalOptions="Start"
                    Margin="20,0,20,0"
                    Placeholder="Title"/>
                <BoxView Color="Black" WidthRequest="100" HeightRequest="2"/>

                <Label Text="Set Term Dates"
                       FontSize="Large"
                       HorizontalOptions="Center"
                       Padding="0,20,0,0"/>
                <Grid Padding="30,0,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <Label Text="Start"
                           Padding="30,5,0,0"/>

                    <Label Text="End"
                           Padding="30,5,30,0"
                           Grid.Column="1"
                           HorizontalOptions="Center"/>

                    <DatePicker x:Name="StartDatePicker" 
                        HorizontalOptions="Start"
                                Grid.Row="1"
                                PropertyChanged="StartDatePicker_PropertyChanged"/>
                    <DatePicker x:Name="EndDatePicker" 
                        HorizontalOptions="Center"
                                Grid.Row="1"
                                Grid.Column="1"
                                PropertyChanged="EndDatePicker_PropertyChanged"/>

                </Grid>
                <BoxView Color="Black" WidthRequest="100" HeightRequest="2"/>
                <Label x:Name="AddedCourseLabel"/>
                <Label Text="Add Course"
                       FontSize="Large"
                       HorizontalOptions="Center"
                       Padding="0,20,0,0"/>
                <Picker x:Name="AddCoursesPicker"
                        Margin="20,0,20,0"/>
                <Grid>
                    <Button 
                        BackgroundColor="Green"
                            Text="Undo"
                            TextColor="White"
                            WidthRequest="200"
                            VerticalOptions="Start"
                            HorizontalOptions="Center"
                            Clicked="Undo_Clicked"/>
                    <Button BackgroundColor="Blue"
                            Text="Add Course"
                            TextColor="White"
                            WidthRequest="200"
                            VerticalOptions="Start"
                            HorizontalOptions="Center"
                            Margin="0,0,0,20"
                            Grid.Column="1"
                            Clicked="AddCourse_Clicked"/>
                </Grid>

                <BoxView Color="Black" WidthRequest="100" HeightRequest="2"/>

                <Button BackgroundColor="Yellow"
                        Text="Save"
                        TextColor="Black"
                        WidthRequest="200"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Margin="0,20,0,0"
                        Clicked="Save_Clicked"/>
                <Button BackgroundColor="Red"
                        Text="Cancel"
                        TextColor="White"
                        WidthRequest="200"
                        VerticalOptions="Start"
                        HorizontalOptions="Center"
                        Margin="0,0,0,20"
                        Clicked="Cancel_Clicked"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>